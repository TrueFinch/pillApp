<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pillApp.Views.NewCoursePage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:pillApp.ViewModels"
             xmlns:model="clr-namespace:pillApp.Models"
             x:Name="BrowseItemsPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="EditBtn"
                     Text="Edit" 
                     Command="{Binding EditCourseCommand}"/>
        <ToolbarItem x:Name="SaveBtn"
                     Text="Save" 
                     Command="{Binding AddCourseCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry Placeholder="Enter name..."
                       Text="{Binding CourseNameText, Mode=TwoWay}"
                       FontSize="Medium"
                       IsReadOnly="{Binding IsReadOnly}"/>
                <Editor Placeholder="Enter description..."
                        Text="{Binding CourseDescriptionText, Mode=TwoWay}"
                        FontSize="Medium"
                        IsReadOnly="{Binding IsReadOnly}"/>
                <Picker x:Name="CourseTypePicker"
                        Title="Course type"
                        ItemsSource="{Binding CourseTypes}"/>
                <StackLayout Orientation="Horizontal">
                    <Label FontSize="Medium"
                           Text="Count"/>
                    <Entry Placeholder="0"
                           Text="{Binding CountText, Mode=TwoWay}"
                           FontSize="Medium"
                           IsReadOnly="{Binding IsReadOnly}"/>
                    <Entry Placeholder="piece"
                           Text="{Binding ReceptionUnitText}"
                           FontSize="Medium"
                           IsReadOnly="{Binding}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>